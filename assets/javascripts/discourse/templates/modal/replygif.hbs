{{#d-modal-body id="replygif-modal"}}
  <div>
    {{#if loadingTags}}
      {{i18n "loading"}}
    {{else }}
      <div class="categories">
        <label for="categories">{{i18n "replygif.categories"}}</label>
        {{combo-box name="categories" valueAttribute="title" value=selectedCategory
          nameProperty="title" content=filterCategories none="replygif.none" }}
      </div>
      <div class="tags">
        <label for="replygif-tag-selector">{{i18n "replygif.tags"}}</label>
        {{replygif-tag-selector name="replygif-tag-selector" datasource=datasource refresh="refresh"}}
      </div>
    {{/if}}
  </div>
  <div class="replygif-content">
    {{#if loading}}
      {{i18n "loading"}}
    {{else}}
      <div class="replygif-box">
        {{#each currentGifs as |result|}}
          {{replygif-result content=result pickItem="pickItem"}}
        {{/each}}
      </div>
    {{/if}}
  </div>
{{/d-modal-body}}
<div class="modal-footer">
  <button class="btn btn-primary pull-right" {{action "apply"}}>{{i18n "replygif.insert"}}</button>
</div>